<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peoplentech.devkh.alumnicontact.BatchActivity"
    android:orientation="vertical"
    android:id="@+id/batchLayout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Batch No"
        android:textAlignment="center"
        android:focusable="false"
        android:drawableStart="@drawable/ic_searchbatch"
        android:layout_margin="8dp"
        android:id="@+id/batch_search"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/batchRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewBatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
