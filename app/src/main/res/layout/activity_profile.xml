<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#253042"
    android:padding="5dp"
    tools:context="com.peoplentech.devkh.alumnicontact.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:background="#4cdec1"
        android:layout_marginEnd="50dp"
        android:padding="25dp"
        android:id="@+id/department">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/subject"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="#2fae95"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Deaprtment"
            android:textColor="#fff"
            android:paddingStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:background="#ffc572"
        android:layout_marginEnd="50dp"
        android:padding="25dp"
        android:id="@+id/batch_no">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/subject"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="#cc974a"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Batch"
            android:textColor="#fff"
            android:paddingStart="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:background="#69afff"
        android:layout_marginEnd="50dp"
        android:padding="25dp"
        android:id="@+id/blood">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/subject"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="#3f81cc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Blood Group"
            android:layout_marginTop="1dp"
            android:textColor="#fff"
            android:paddingStart="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"/>








</LinearLayout>











